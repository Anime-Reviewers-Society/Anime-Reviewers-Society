{% extends 'front.base.html.twig' %}
{% block title %}ARS | Profil{% endblock %}
{% block content %}
<div class="user">
    <div class="row">
        <div class="col-sm-2">
            <img src="{{ user.avatar }}" class="img-circle">
            <div class="user__informations">
            </div>
        </div>
        <div class="col-sm-10">
            <div class="user__informations_title">
                <h1>{{ user.username }}</h1>
                <div class="user__actions">
                    <a href="{{ path("profil.edit") }}" class="btn btn-primary btn-darker-blue"><i class="fas fa-user-edit"></i>
                        Modifier</a>
                    <a href="{{ path("app_logout") }}" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i>
                        DÃ©connexion</a>
                </div>
            </div>
            <p class="user__informations_bio">{{ user.bio }}</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <div class="badge__wrapper">
                {% for b in badge %}
                    <a class="badge" title="{{ b.label }}"><img src="{{ b.image }}" width="50" height="50"></a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}