{% extends 'admin/dashboard.html.twig' %}

{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Sous-Genre</th>
            <th scope="col"><a href="{{ path("admin.tag.new") }}" class="btn btn-primary"><i class="fas fa-user-plus"></i> Ajouter</a></th>
        </tr>
        </thead>
        <tbody>
        {% for t in tag %}
            <tr>
                <th scope="row">{{ t.id }}</th>
                <td>{{ t.label }}</td>
                <td>
                    <a href="{{ path("admin.tag.edit", { 'id' : t.id } ) }}" class="btn btn-primary"><i class="far fa-edit"></i> Editer</a>
                    <form method="post" action="{{ path('admin.tag.delete', {'id': t.id}) }}" onsubmit="return confirm('Es-tu sÃ»r(e) ?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ t.id) }}">
                        <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
