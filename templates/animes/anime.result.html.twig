{% extends 'front.base.html.twig' %}

{% block content %}
    <div class="anime__list">
        <div class="row">
            {% for a in anime %}
                <div class="col-sm-3">
                    <a href="{{ path('anime.show', { 'id' : a.id }) }}" class="anime__link">
                        <div class="card anime__card">
                            <div class="card_img__wrapper">
                                <img class="card-img-top" src="{{ asset('/uploads/images/anime_images/' ~ a.image) }}" alt="{{ a.originalTitle }}">
                                <div class="card_img_overlay">
                                    <div class="card_img_overlay_content"></div>
                                </div>
                            </div>
                            <div class="card_body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="anime__card_title">
                                            <h3>{{ a.originalTitle }}</h3>
                                            <h4><em>{{ a.translatedTitle }}</em></h4>
                                        </div>
                                        {% if a.target %}
                                            <div class="anime__card_target">
                                                <span>{{ a.target }}</span>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(anime) }}
        </div>
    </div>
{% endblock %}